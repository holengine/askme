<div class="container">
  <h2 class="title-lg mb">
    Недавно добавились
  </h2>

  <div class="users-box">
    <% @users.each do |user| %>
      <%= render partial: 'users/user_avatar', locals: {user: user} %>
    <% end %>
  </div>
</div>

<div class="container mt-sm ">
  <h2 class="title-lg">Последние хэш-тэги</h2>
</div>

<div class="container mt-sm ">
  <% @tags.each do |tag|%>
      <%= display_hashtags(tag) %>
  <% end %>
</div>

<div class="container mt-sm ">
  <h2 class="title-lg">
    <%= inclination(@questions.count, 'Последний', 'Последние', 'Последние') %>
    <%= @questions.count %>
    <%= inclination(@questions.count, 'вопрос', 'вопроса', 'вопросов') %>
  </h2>
</div>

<% @questions.each do |question|%>
  <div class="mt-sm container <%= 'opacity' if question.hidden %>">
    <p class="mb text-sm text-grey">
      Вопрос <%= link_to "№#{question.id}", question_path(question) %>
      для пользователя <%= link_to display_nickname(question.user), user_path(question.user) %>
    </p>
    <%= render question %>
  </div>
<% end %>
